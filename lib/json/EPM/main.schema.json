{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "LDIFAttributeType" : {
      "type" : "string",
      "enum": ["CN", "OU", "O", "DC", "C", "SN"]
    },
    "SpecificAttributes" : {
      "type" : "string",
      "enum": ["NONE", "PersonAttributes", "OrganizationAttributes"]
    },
    "DNComponent" : {
      "type" : "object",
      "description" : "Represents a component of a Distinguished Name (DN) in LDAP",
      "properties" : {
        "TYPE" : {
                "$ref" : "#/definitions/LDIFAttributeType",
                "description" : "The type of the DN component"
              },
        "VALUE" : {
                "type" : "string",
                "description" : "The value of the DN component"
              }
      },
      "additionalProperties" : false
    },
    "DistinguishedName" : {
      "type" : "object",
      "description" : "Represents a Distinguished Name composed of DNComponents",
      "properties" : {
        "COMPONENTS" : {
                "type" : "array", "items" : {"$ref" : "#/definitions/DNComponent"},
                "description" : "The sequence of components making up the DN"
              }
      },
      "additionalProperties" : false
    },
    "CryptoKey" : {
      "type" : "object",
      "description" : "Represents cryptographic key information",
      "properties" : {
        "PUBLIC_KEY" : {
                "type" : "string",
                "description" : "Public part of the cryptographic key"
              },
        "XPUB" : {
                "type" : "string",
                "description" : "Extended public key"
              },
        "PRIVATE_KEY" : {
                "type" : "string",
                "description" : "Private part of the cryptographic key, should be kept secret"
              },
        "XPRIV" : {
                "type" : "string",
                "description" : "Extended private key"
              },
        "KEY_ADDRESS" : {
                "type" : "string",
                "description" : "Address generated from the cryptographic key"
              },
        "ADDRESS_TYPE" : {
                "type" : "string",
                "description" : "Numerical type of the address generated from the cryptographic key"
              }
      },
      "additionalProperties" : false
    },
    "Address" : {
      "type" : "object",
      "description" : "Represents a geographic address",
      "properties" : {
        "COUNTRY" : {
                "type" : "string",
                "description" : "Country of the address"
              },
        "REGION" : {
                "type" : "string",
                "description" : "Region of the address (e.g., state or province)"
              },
        "LOCALITY" : {
                "type" : "string",
                "description" : "Locality of the address (e.g., city or town)"
              },
        "POSTAL_CODE" : {
                "type" : "string",
                "description" : "Postal code of the address"
              },
        "STREET" : {
                "type" : "string",
                "description" : "Street address"
              },
        "POST_OFFICE_BOX_NUMBER" : {
                "type" : "string",
                "description" : "Post office box number"
              }
      },
      "additionalProperties" : false
    },
    "PersonAttributes" : {
      "type" : "object",
      "description" : "Specific attributes for a Person",
      "properties" : {
        "FAMILY_NAME" : {
                "type" : "string",
                "description" : "Family name or surname of the person"
              },
        "GIVEN_NAME" : {
                "type" : "string",
                "description" : "Given name or first name of the person"
              },
        "ADDITIONAL_NAME" : {
                "type" : "string",
                "description" : "Additional name or middle name of the person"
              },
        "HONORIFIC_PREFIX" : {
                "type" : "string",
                "description" : "Honorific prefix preceding the person's name (e.g., Mr., Dr.)"
              },
        "HONORIFIC_SUFFIX" : {
                "type" : "string",
                "description" : "Honorific suffix following the person's name (e.g., Jr., Sr.)"
              },
        "JOB_TITLE" : {
                "type" : "string",
                "description" : "Job title of the person"
              },
        "OCCUPATION" : {
                "type" : "string",
                "description" : "Occupation of the person"
              }
      },
      "additionalProperties" : false
    },
    "OrganizationAttributes" : {
      "type" : "object",
      "description" : "Specific attributes for an Organization",
      "properties" : {
        "LEGAL_NAME" : {
                "type" : "string",
                "description" : "Legal name of the organization"
              }
      },
      "additionalProperties" : false
    },
    "EPM" : {
      "type" : "object",
      "description" : "Entity Profile Message",
      "properties" : {
        "NAME" : {
                "type" : "string",
                "description" : "Common name of the entity (person or organization)"
              },
        "ALTERNATE_NAMES" : {
                "type" : "array", "items" : {"type" : "string"},
                "description" : "Alternate names for the entity"
              },
        "EMAIL" : {
                "type" : "string",
                "description" : "Email address of the entity"
              },
        "TELEPHONE" : {
                "type" : "string",
                "description" : "Telephone number of the entity"
              },
        "KEYS" : {
                "type" : "array", "items" : {"$ref" : "#/definitions/CryptoKey"},
                "description" : "Cryptographic keys associated with the entity"
              },
        "MULTIFORMAT_ADDRESS" : {
                "type" : "array", "items" : {"type" : "string"},
                "description" : "Multiformat addresses associated with the entity"
              },
        "ATTRIBUTES_type" : {
                "$ref" : "#/definitions/SpecificAttributes"
              },
        "ATTRIBUTES" : {
                "anyOf": [{ "$ref" : "#/definitions/PersonAttributes" },{ "$ref" : "#/definitions/OrganizationAttributes" }],
                "description" : "Specific attributes for the entity, either Person or Organization"
              }
      },
      "additionalProperties" : false
    },
    "EPMCOLLECTION" : {
      "type" : "object",
      "description" : "Collection of Entity Profile Messages",
      "properties" : {
        "RECORDS" : {
                "type" : "array", "items" : {"$ref" : "#/definitions/EPM"},
                "description" : "Records of Entity Profile Messages"
              }
      },
      "additionalProperties" : false
    }
  },
  "$ref" : "#/definitions/EPMCOLLECTION"
}

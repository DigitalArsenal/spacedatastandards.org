{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "WTH" : {
      "type" : "object",
      "description" : "Weather Data",
      "properties" : {
        "ID" : {
                "type" : "string",
                "description" : "Unique identifier"
              },
        "ID_SENSOR" : {
                "type" : "string",
                "description" : "Sensor identifier"
              },
        "ORIG_SENSOR_ID" : {
                "type" : "string",
                "description" : "Original sensor identifier"
              },
        "OB_TIME" : {
                "type" : "string",

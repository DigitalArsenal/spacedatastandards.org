{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "AEMSegment": {
      "type": "object",
      "properties": {
        "OBJECT_NAME": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "OBJECT_ID": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "REF_FRAME_A": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "REF_FRAME_B": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "ATTITUDE_DIR": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "TIME_SYSTEM": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "ATTITUDE_TYPE": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "START_TIME": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "STOP_TIME": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "STEP_SIZE": {
          "type": "number",
          "description": "Time interval between attitude states in seconds (required).",
          "x-flatbuffer-type": "double"
        },
        "ATTITUDE_COMPONENTS": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "description": "Number of components per attitude state.\n7 = quaternion + angular rates (Q1, Q2, Q3, QC, RATE_X, RATE_Y, RATE_Z)\n4 = quaternion only (Q1, Q2, Q3, QC)",
          "x-flatbuffer-type": "uint8"
        },
        "ATTITUDE_DATA": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Attitude data as row-major array of doubles.\nLayout: [Q1_0, Q2_0, Q3_0, QC_0, RATE_X_0, RATE_Y_0, RATE_Z_0, Q1_1, ...]\nTime reconstruction: epoch[i] = START_TIME + (i * STEP_SIZE)\nLength must be divisible by ATTITUDE_COMPONENTS.",
          "x-flatbuffer-type": "[double]"
        }
      },
      "additionalProperties": false
    },
    "AEM": {
      "type": "object",
      "description": "Attitude Ephemeris Message",
      "properties": {
        "CCSDS_AEM_VERS": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "CREATION_DATE": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "ORIGINATOR": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "SEGMENTS": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AEMSegment"
          },
          "x-flatbuffer-type": "[AEMSegment]"
        }
      },
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/AEM",
  "x-flatbuffer-root-type": "AEM",
  "x-flatbuffer-file-identifier": "$AEM"
}
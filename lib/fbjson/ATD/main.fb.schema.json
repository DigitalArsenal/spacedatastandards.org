    "attMotionType": {
      "type": "string",
      "enum": [
        "STABILIZED",
        "SPINNING",
        "TUMBLING",
        "PRECESSING",
        "UNKNOWN"
      ],
      "x-flatbuffer-type": "enum",
      "x-flatbuffer-enum-type": "byte",
      "x-flatbuffer-enum-values": {
        "STABILIZED": {
          "value": 0
        },
        "SPINNING": {
          "value": 1
        },
        "TUMBLING": {
          "value": 2
        },
        "PRECESSING": {
          "value": 3
        },
        "UNKNOWN": {
          "value": 4
        }
      }
    },
    "attRepresentation": {
      "type": "string",
      "enum": [
        "QUATERNION",
        "EULER",
        "SPIN",
        "DIRECTION_COSINE"
      ],
      "x-flatbuffer-type": "enum",
      "x-flatbuffer-enum-type": "byte",
      "x-flatbuffer-enum-values": {
        "QUATERNION": {
          "value": 0
        },
        "EULER": {
          "value": 1
        },
        "SPIN": {
          "value": 2
        },
        "DIRECTION_COSINE": {
          "value": 3
        }
      }
    },
    "ATD": {
      "type": "object",
      "description": "Attitude Data Point",
      "properties": {
        "ID": {
          "type": "string",
          "description": "Unique identifier",
          "x-flatbuffer-type": "string"
        },
        "AS_ID": {
          "type": "string",
          "description": "Attitude set identifier (groups time-series points)",
          "x-flatbuffer-type": "string"
        },
        "SAT_NO": {
          "type": "integer",
          "minimum": 0,
          "maximum": 4294967295,
          "description": "Satellite catalog number",
          "x-flatbuffer-type": "uint32"
        },
        "ORIG_OBJECT_ID": {
          "type": "string",
          "description": "International designator",
          "x-flatbuffer-type": "string"
        },
        "EPOCH": {
          "type": "string",
          "description": "Observation epoch (ISO 8601)",
          "x-flatbuffer-type": "string"
        },
        "REPRESENTATION": {
          "$ref": "#/definitions/attRepresentation",
          "description": "Attitude representation used",
          "x-flatbuffer-type": "enum",
          "x-flatbuffer-enum-type": "byte",
          "x-flatbuffer-enum-values": {
            "QUATERNION": {
              "value": 0
            },
            "EULER": {
              "value": 1
            },
            "SPIN": {
              "value": 2
            },
            "DIRECTION_COSINE": {
              "value": 3
            }
          }
        },
        "MOTION_TYPE": {
          "$ref": "#/definitions/attMotionType",
          "description": "Motion characterization",
          "x-flatbuffer-type": "enum",
          "x-flatbuffer-enum-type": "byte",
          "x-flatbuffer-enum-values": {
            "STABILIZED": {
              "value": 0
            },
            "SPINNING": {
              "value": 1
            },
            "TUMBLING": {
              "value": 2
            },
            "PRECESSING": {
              "value": 3
            },
            "UNKNOWN": {
              "value": 4
            }
          }
        },
        "QC": {
          "type": "number",
          "description": "Quaternion scalar component (q0 or qc)",
          "x-flatbuffer-type": "double"
        },
        "Q1": {
          "type": "number",
          "description": "Quaternion vector component 1",
          "x-flatbuffer-type": "double"
        },
        "Q2": {
          "type": "number",
          "description": "Quaternion vector component 2",
          "x-flatbuffer-type": "double"
        },
        "Q3": {
          "type": "number",
          "description": "Quaternion vector component 3",
          "x-flatbuffer-type": "double"
        },
        "QC_DOT": {
          "type": "number",
          "description": "Quaternion scalar rate (rad/s)",

{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "PRG": {
      "type": "object",
      "description": "Program Description Message",
      "properties": {
        "NAME": {
          "type": "string",
          "description": "The name of the program",
          "x-flatbuffer-type": "string"
        },
        "HD_KEY_PATH": {
          "type": "string",
          "description": "Hierarchical Deterministic (HD) derivation path for the program's key, used in cryptocurrency wallets",
          "x-flatbuffer-type": "string"
        },
        "MESSAGE_TYPES": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Vector of standard message types used by the program",
          "x-flatbuffer-type": "[string]"
        },
        "USERS": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/USR"
          },
          "description": "Vector of users associated with the program, each user can have assigned message types",
          "x-flatbuffer-type": "[USR]"
        }
      },
      "additionalProperties": false
    },
    "USR": {
      "type": "object",
      "properties": {
        "ID": {
          "type": "string",
          "x-flatbuffer-type": "string"
        },
        "MESSAGE_TYPES": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "x-flatbuffer-type": "[string]"
        }
      },
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/PRG",
  "x-flatbuffer-root-type": "PRG",
  "x-flatbuffer-file-identifier": "$PRG"
}
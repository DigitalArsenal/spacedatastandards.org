        "SHAPED": {
          "value": 3
        },
        "STEERABLE": {
          "value": 4
        },
        "HOPPING": {
          "value": 5
        }
      }
    },
    "beamPolarization": {
      "type": "string",
      "enum": [
        "RHCP",
        "LHCP",
        "LINEAR_H",
        "LINEAR_V",
        "DUAL_CIRCULAR",
        "DUAL_LINEAR",
        "CROSS_POL"
      ],
      "x-flatbuffer-type": "enum",
      "x-flatbuffer-enum-type": "byte",
      "x-flatbuffer-enum-values": {
        "RHCP": {
          "value": 0
        },
        "LHCP": {
          "value": 1
        },
        "LINEAR_H": {
          "value": 2
        },
        "LINEAR_V": {
          "value": 3
        },
        "DUAL_CIRCULAR": {
          "value": 4
        },
        "DUAL_LINEAR": {
          "value": 5
        },
        "CROSS_POL": {
          "value": 6
        }
      }
    },
    "beamContourPoint": {
      "type": "object",
      "description": "Beam Contour Point (gain pattern boundary)",
      "properties": {
        "LATITUDE": {
          "type": "number",
          "description": "Latitude in degrees",
          "x-flatbuffer-type": "double"
        },
        "LONGITUDE": {
          "type": "number",
          "description": "Longitude in degrees",
          "x-flatbuffer-type": "double"
        },
        "GAIN": {
          "type": "number",
          "description": "Gain level in dBi at this contour",
          "x-flatbuffer-type": "double"
        }
      },
      "additionalProperties": false
    },
    "beamContour": {
      "type": "object",
      "description": "Beam Contour (iso-gain boundary)",
      "properties": {
        "CONTOUR_ID": {
          "type": "string",
          "description": "Contour level identifier",
          "x-flatbuffer-type": "string"
        },
        "GAIN_LEVEL": {
          "type": "number",
          "description": "Gain level in dBi",
          "x-flatbuffer-type": "double"
        },
        "POINTS": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/beamContourPoint"
          },
          "description": "Contour boundary points",
          "x-flatbuffer-type": "[beamContourPoint]"
        }
      },
      "additionalProperties": false
    },
    "BEM": {
      "type": "object",
      "description": "Antenna Beam",
      "properties": {

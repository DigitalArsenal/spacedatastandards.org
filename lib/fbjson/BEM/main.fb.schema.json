          "description": "Beam polarization",
          "x-flatbuffer-type": "enum",
          "x-flatbuffer-enum-type": "byte",
          "x-flatbuffer-enum-values": {
            "RHCP": {
              "value": 0
            },
            "LHCP": {
              "value": 1
            },
            "LINEAR_H": {
              "value": 2
            },
            "LINEAR_V": {
              "value": 3
            },
            "DUAL_CIRCULAR": {
              "value": 4
            },
            "DUAL_LINEAR": {
              "value": 5
            },
            "CROSS_POL": {
              "value": 6
            }
          }
        },
        "PEAK_GAIN": {
          "type": "number",
          "description": "Peak gain in dBi",
          "x-flatbuffer-type": "double"
        },
        "EOC_GAIN": {
          "type": "number",
          "description": "Edge-of-coverage gain in dBi",
          "x-flatbuffer-type": "double"
        },
        "CENTER_LATITUDE": {
          "type": "number",
          "description": "Beam center latitude in degrees",
          "x-flatbuffer-type": "double"
        },
        "CENTER_LONGITUDE": {
          "type": "number",
          "description": "Beam center longitude in degrees",
          "x-flatbuffer-type": "double"
        },
        "BEAMWIDTH": {
          "type": "number",
          "description": "Beamwidth (3dB) in degrees",
          "x-flatbuffer-type": "double"
        },
        "FREQUENCY": {
          "type": "number",
          "description": "Operating frequency in MHz",
          "x-flatbuffer-type": "double"
        },
        "EIRP": {
          "type": "number",
          "description": "EIRP at beam center in dBW",
          "x-flatbuffer-type": "double"
        },
        "G_OVER_T": {
          "type": "number",
          "description": "G/T at beam center in dB/K",
          "x-flatbuffer-type": "double"
        },
        "FOOTPRINT_AREA": {
          "type": "number",
          "description": "Beam footprint area in km^2",
          "x-flatbuffer-type": "double"
        },
        "BEAM_CONTOURS": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/beamContour"
          },
          "description": "Beam contour definitions",
          "x-flatbuffer-type": "[beamContour]"
        },
        "NOTES": {
          "type": "string",
          "description": "Additional notes",
          "x-flatbuffer-type": "string"
        }
      },
      "additionalProperties": false
    }
